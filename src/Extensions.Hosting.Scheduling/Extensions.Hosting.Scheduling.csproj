<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>1701;1702;1705;1591</NoWarn>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <AssemblyName>Extensions.Hosting.Scheduling</AssemblyName>
        <PackageId>Extensions.Hosting.Scheduling</PackageId>
        <Authors>Lima Technology Services;Fernando Luiz de Lima</Authors>
        <Copyright>Copyright Â© Lima Technology Services;Fernando Luiz de Lima</Copyright>
        <Description>Exposes scheduling utilities.</Description>
        <PackageProjectUrl>https://github.com/ffernandolima/extensions-hosting</PackageProjectUrl>
        <RepositoryUrl>https://github.com/ffernandolima/extensions-hosting</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Microsoft; Extensions; Hosting; Scheduling</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Version>2.1.0</Version>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="3.1.6" />
        <PackageReference Include="ncrontab" Version="3.3.1" />
    </ItemGroup>

</Project>
